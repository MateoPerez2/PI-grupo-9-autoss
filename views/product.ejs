<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logoauto (1).png" />

	<title> AutoBidder </title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	<%- include('./partials/header') %>
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= filtroId[0].nombre %></h2> 
			<p class="product-detail-description">
				<a href="/product/product-add" >Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/<%= filtroId[0].imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= filtroId[0].descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let i = 0; i < filtroId[0].comentarios.length; i++) {%>
							<article>
								<img src="/<%= filtroId[0].comentarios[i].imagenDePerfil %>" alt="">
								<div class="data">
									<p class="user">
									<strong style="font-weight: 700;"> <a href="/users/profile" class="aProduct"><%= filtroId[0].comentarios[i].nombreUsuario %>	</a> </strong>
									<%= filtroId[0].comentarios[i].texto%>
								</div>
							</article>
						<% } %>
					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<%- include('./partials/footer') %>


</body>	
</html>