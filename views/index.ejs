<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logoauto (1).png" />
	
	<title> AutoBidder </title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	
	<%- include('./partials/header') %>

	
	<!-- Banner -->
	<div class="banner">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < producto.length; i++) {%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="product/<%= producto[i].id %>" class="aProduct">
							<figure class="product-box_image">
								<img src="<%= producto[i].imagen %>" alt="">
							</figure>
							<article class="product-box_data">
								<h2><%= producto[i].nombre %></h2>
								<p><%= producto[i].descripcion %></p>
								<p><%= producto[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>

			
		</div>
	</div>

	<%- include('./partials/footer') %>
	
</body>	
</html>